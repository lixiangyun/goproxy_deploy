FROM golang:1.8.1

WORKDIR /go/src/test
ENV GOPATH=/go/src/test
ENV GOOS=linux
ENV CGO_ENABLED=0

RUN go get -u -v github.com/lixiangyun/goproxy/

WORKDIR /go/src/test/github.com/lixiangyun/goproxy/examples/goproxy-basic/

RUN go build .

RUN ls -il

FROM alpine:latest
RUN apk --no-cache add ca-certificates

WORKDIR /root/

RUN cp -rf /go/src/test/github.com/lixiangyun/goproxy/examples/goproxy-basic/goproxy-basic ./proxy

RUN chmod +x *

EXPOSE 8080

# docker build -t goproxy:1.0 .
# docker run -d -p 8080:8080 --restart=always goproxy:1.0

ENTRYPOINT ["./proxy", "addr", "8080"]
